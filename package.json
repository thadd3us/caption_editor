{
  "name": "caption-editor",
  "version": "1.0.4",
  "type": "module",
  "main": "dist-electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "dev:electron": "npm run build:electron && electron . --trace-warnings",
    "dev:electron:watch": "concurrently \"npm run dev\" \"npm run dev:electron\"",
    "build": "vue-tsc && vite build",
    "build:electron": "vite build --config vite.electron.config.ts",
    "build:all": "npm run build && npm run build:electron",
    "package": "npm run build:all && electron-builder --mac --win --linux",
    "package:mac": "npm run build:all && electron-builder --mac",
    "package:win": "npm run build:all && electron-builder --win",
    "package:linux": "npm run build:all && electron-builder --linux",
    "preview": "vite preview",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:unit:ui": "vitest --ui",
    "test:unit:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:coverage": "playwright test --reporter=html,json",
    "test:e2e:electron": "npm run build:all && playwright test --config playwright.electron.config.ts",
    "test:coverage": "npm run test:unit:coverage && playwright test --reporter=html && npx nyc report --reporter=text --reporter=html",
    "test:build": "vue-tsc && vite build",
    "test:all": "npm run test:unit && npm run test:e2e && npm run test:build"
  },
  "dependencies": {
    "ag-grid-community": "^31.1.1",
    "ag-grid-vue3": "^31.1.1",
    "pinia": "^2.1.7",
    "uuid": "^9.0.1",
    "vue": "^3.4.21"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "@playwright/test": "^1.56.1",
    "@types/node": "^20.11.24",
    "@types/uuid": "^9.0.8",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "concurrently": "^9.2.1",
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12",
    "jsdom": "^27.0.1",
    "nyc": "^17.1.0",
    "typescript": "^5.4.2",
    "vite": "^5.1.5",
    "vite-plugin-istanbul": "^7.2.0",
    "vitest": "^3.2.4",
    "vue-tsc": "^2.0.6"
  }
}
