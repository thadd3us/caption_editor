{
  "appId": "com.captioneditor.app",
  "productName": "Caption Editor",
  "directories": {
    "output": "release",
    "buildResources": "assets/packaging"
  },
  "files": [
    "dist/**/*",
    "dist-electron/**/*",
    "electron/**/*",
    "package.json"
  ],
  "extraMetadata": {
    "main": "dist-electron/main.cjs"
  },
  "fileAssociations": [
    {
      "ext": "srt",
      "name": "SubRip Caption File",
      "description": "SubRip caption and subtitle file",
      "role": "Editor",
      "icon": "assets/packaging/icon.icns"
    },
    {
      "ext": "captions_json",
      "name": "Caption Editor Project",
      "description": "Caption Editor project file",
      "role": "Editor",
      "icon": "assets/packaging/icon.icns"
    },
    {
      "ext": [
        "mp4",
        "mp3",
        "aac",
        "m4a",
        "wav",
        "mov"
      ],
      "name": "Media File",
      "description": "Media file for captioning",
      "role": "Viewer",
      "icon": "assets/packaging/icon.icns"
    }
  ],
  "mac": {
    "category": "public.app-category.productivity",
    "target": [
      "dmg",
      "zip"
    ],
    "icon": "assets/packaging/icon.icns",
    "entitlements": "assets/packaging/entitlements.mac.plist",
    "entitlementsInherit": "assets/packaging/entitlements.mac.plist",
    "hardenedRuntime": true,
    "gatekeeperAssess": false
  },
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },
  "win": {
    "target": [
      "nsis",
      "portable"
    ],
    "icon": "assets/packaging/icon.ico"
  },
  "linux": {
    "target": [
      "AppImage",
      "deb"
    ],
    "category": "Utility",
    "icon": "assets/packaging/icon.png"
  }
}