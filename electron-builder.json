{
  "appId": "com.captioneditor.app",
  "productName": "Caption Editor",
  "directories": {
    "output": "release",
    "buildResources": "assets/packaging"
  },
  "files": [
    "dist/**/*",
    "dist-electron/**/*",
    "electron/**/*",
    "package.json"
  ],
  "extraMetadata": {
    "main": "dist-electron/main.cjs"
  },
  "fileAssociations": [
    {
      "ext": "vtt",
      "name": "WebVTT Caption File",
      "description": "WebVTT caption and subtitle file",
      "role": "Editor",
      "icon": "assets/packaging/icon.icns"
    }
  ],
  "mac": {
    "category": "public.app-category.productivity",
    "target": [
      "dmg",
      "zip"
    ],
    "icon": "assets/packaging/icon.icns",
    "entitlements": "assets/packaging/entitlements.mac.plist",
    "entitlementsInherit": "assets/packaging/entitlements.mac.plist",
    "hardenedRuntime": true,
    "gatekeeperAssess": false
  },
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },
  "win": {
    "target": [
      "nsis",
      "portable"
    ],
    "icon": "assets/packaging/icon.ico"
  },
  "linux": {
    "target": [
      "AppImage",
      "deb"
    ],
    "category": "Utility",
    "icon": "assets/packaging/icon.png"
  }
}